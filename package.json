{
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "coffee-script": "1.9.0",
    "mocha": "*",
    "express": "4.13.3",
    "cookie-parser": "1.4.0",
    "body-parser": "1.14.1",
    "ejs": "2.3.3",
    "ncp": "2.0.0",
    "mongodb": "2.0.48",
    "q": "^1.4.1",
    "bson": "0.4.19",
    "jquery": "2.1.4",
    "bootstrap": "3.3.5",
    "less": "^2.5.3"
  },
  "dev-dependencies": {

  },
  "scripts": {
    "test": "mocha",
    "brewCoffee": "coffee -o dist/ -c src/ && ncp src/ dist/",
    "hotCoffee": "coffee -o dist/ -cw src/",
    "hotTests": "coffee -cwo spec/ spec/",
    "hotCss": "lessc src/client/styles/index.less dist/client/styles/index.css",
    "copyBootstrap": "ncp node_modules/bootstrap/js/collapse.js dist/client/js/collapse.js",
    "copyJquery": "ncp node_modules/jquery/dist/jquery.min.js dist/client/js/jquery.min.js",
    "copyPlugins": "npm run copyBootstrap && npm run copyJquery",
    "build": "npm run brewCoffee && npm run copyPlugins && npm run hotCss",
    "postinstall": "npm run build",
    "prestart": "ncp src/ dist/ && npm run copyPlugins && npm run hotCss",
    "start": "node ./dist/server/index"
  }
}
