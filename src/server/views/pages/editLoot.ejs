<% include common/header/header %>

          <form action="/loot/edit" method="POST">

            <div class="form-group">
                <label for="lootType">Type</label>
                <select class="form-control" id="lootType" name="lootType">
                  <% for (var i = 0; i < lootTypes.length; i++) {  %>
                    <option <% if(lootContainer.lootType == lootTypes[i]._id) { %>selected="selected"<% } %> value="<%= lootTypes[i]._id %>"><%= lootTypes[i].name %></option>
                  <% } %>
                </select>
              </div>

            <div class="form-group">
                <label for="lootLevel">Level</label>
                <select class="form-control" id="lootLevel" name="lootLevel">
                  <% for (var i = 0; i < lootLevels.length; i++) {  %>
                    <option <% if(lootContainer.lootLevel == lootLevels[i]._id) { %>selected="selected"<% } %> value="<%= lootLevels[i]._id %>"><%= lootLevels[i].name %></option>
                  <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="lootStatus">Status</label>
                <select class="form-control" id="lootLevel" name="lootStatus">
                  <% for (var i = 0; i < lootStatuses.length; i++) {  %>
                    <option <% if(lootContainer.lootStatus == lootStatuses[i]._id) { %>selected="selected"<% } %> value="<%= lootStatuses[i]._id %>"><%= lootStatuses[i].name %></option>
                  <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" value="<%= lootContainer.description %>">
            </div>

            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" value="<%= lootContainer.location %>">
            </div>

            <div class="form-group">
              <input type="hidden" name="_id" value="<%= lootContainer._id %>">
              <input class="btn btn-primary" type="submit" value="Submit">
            </div>
          </form>

<% include common/footer/footer %>
