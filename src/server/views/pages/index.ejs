<html>
  <head>
    <link href='//fonts.googleapis.com/css?family=Raleway:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" media="screen" title="no title" charset="utf-8">
    <link rel="stylesheet" href="styles/index.css" media="screen" title="no title" charset="utf-8">
    <title>Home</title>
  </head>

  <body>
    <div class="container">
      <div class="row">
          <div class="eight columns">
            <div id="content">
              <h3>Welcome home, <%= user.name %></h3>
            </div>
          </div>
            <div class="four columns text-right">
              <a href="/logout" class="button button-primary">Logout</a>
            </div>
        </div>
        <div class="row">
          <div class="twelve columns">
            <a href="/loot/add" class="button button-primary">Add loot</a>
          </div>
        </div>

        <div class="row">
          <div class="twelve columns">

            <% if (loot.length > 0) { %>

              <% for (var i = 0; i < loot.length; i++) {  %>
              <div class="row lootItem">
                <div class="twelve column">
                  <div class="row">
                    <div class="twelve column">
                      <strong>Type</strong> <%= lootTypes[loot[i].lootType] %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="twelve column">
                      <strong>Status</strong> <%= lootStatuses[loot[i].lootStatus] %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="twelve column">
                      <strong>Description</strong> <%= loot[i].description %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="twelve column">
                      <strong>Location</strong> <%= loot[i].location %>
                    </div>
                  </div>

                </div>
              </div>
              <% } %>

            <% } else { %>

              <p>
                You don't have any loot!
              </p>

            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
